.product-preview
	&__link
		display block
		margin 0 ($gutter / 2)
	
		+sm()
			margin 0 ($sm-gutter / 2)
			
	&:hover
		& .heading
			opacity .7
	
	&__img
		width 100%
		
	&__content
		padding 10px 0 40px
		text-align center
		
		&--sm
			padding 10px 0 20px
			text-align left
			
	&__price
		font-family $secondary-font
		text-transform uppercase
		font-size 13px
		
		+sm()
			font-size 12px
			line-height 1.2