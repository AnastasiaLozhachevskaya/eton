.footer-nav
	display flex
	
	+sm()
		flex-direction column
		text-align center
		order 1
	
	&__item
		font-family $secondary-font
		font-weight 700
		margin-right 25px
		text-transform uppercase
		font-size 14px
		letter-spacing 1px
		
		&:last-child
			margin-right 0
			
		&:hover
			text-decoration underline
			
		+sm()
			margin 0
			padding 5px 10px
			font-size 11px